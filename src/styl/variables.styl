font-family = serif
font-size = 18px
line-height = 26px

font-sizes = {
	xs: {
		size: 9px,
		lineheight: 13px
	},
	sm: {
		size: 12px,
		lineheight: 18px
	},
	md: {
		size: 18px,
		lineheight: 26px
	},
	lg: {
		size: 26px,
		lineheight: 32px
	},
	xl: {
		size: 32px,
		lineheight: 36px
	},
	xxl: {
		size: 48px,
		lineheight: 54px
	}
}

padding-sizes = {
	nil: 0,
	sm: line-height / 2,
	md: line-height,
	lg: line-height * 2,
	xl: line-height * 4,
}
default-padding-size = padding-sizes['md']

screen-sizes = {
	sm: 768px,
	md: 992px,
	lg: 1200px,
	xl: 1400px
}

widths = 2 3 4 5 6 7 8 12