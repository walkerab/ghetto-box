*
	margin 0
	padding 0
	vertical-align top
	text-align left
	box-sizing border-box
	-moz-box-sizing border-box
	-webkit-box-sizing border-box

html
	font-size font-size
	line-height line-height

.tile
	display inline-block
	// padding default-padding-size

.stack
	display block
	// padding default-padding-size

.table
	display table
	width 100%

.table-row
	display table-row

.table-cell
	display table-cell

.v-align-top
	vertical-align top

.v-align-center,
.v-align-middle
	vertical-align middle

.v-align-bottom
	vertical-align bottom

.h-align-left
	text-align left

.h-align-middle
	text-align center

.h-align-right
	text-align right

h-align-justify()
	text-align justify
	font-size 0
	line-height normal
	&:after
		display inline-block
		content ""
		width 100%
	& > *
		font-size font-size
		line-height line-height

.h-align-justify
	h-align-justify()

@media all and (min-width: screen-sizes['sm'])
	.h-align-justify-sm
		h-align-justify()