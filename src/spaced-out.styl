for padding-size-name, padding-size in padding-sizes
	.spaced-out-{padding-size-name}
		padding (padding-size/2)
		& > *
			padding (padding-size/2)
			
	.spaced-out-h-{padding-size-name}
		padding-left (padding-size/2)
		padding-right (padding-size/2)
		& > *
			padding-left (padding-size/2)
			padding-right (padding-size/2)
			
	.spaced-out-v-{padding-size-name}
		padding-top (padding-size/2)
		padding-bottom (padding-size/2)
		& > *
			padding-top (padding-size/2)
			padding-bottom (padding-size/2)